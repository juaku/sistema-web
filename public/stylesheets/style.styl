@import 'nib'

/* 
 * Estilos generales
 * ------- ---------
 */
body
  background-color: #EEE
  font-family: Helvetica, Arial, sans-serif
  font-size: 14px
  margin: 0
  min-width: 995px

a
  color: #00B7FF

/*
 * Estilos espec√≠ficos
 * ------- -----------
 */

/*
 * Cabecera
 */
header
	background-color: #FFF
	height: 50px
	margin: 0 auto
	display: flex
	padding: 5px 20px
	align-items: center

header #title a
	background-image: url('../images/sprite.png?v=sdfbh')
	background-repeat: no-repeat
	width: 105px
	height: 45px
	display: block

header #title a h1
	display: none

header #search-box input
	color: #777
	width: 370px
	height: 20px
	margin-left: 20px
	padding: 0 3px
	border: 1px solid #CCC

header nav ul
	margin: 0
	padding: 0
	display: flex

header nav ul li
	list-style: none
	margin: 0 20px;

/*
 * Cuerpo
 */
main
	display: flex
	margin: 0 20px

// Lado
main aside
	padding: 15px 10px
	width: 110px
	border-right: 1px solid #FFF
	text-align: right

main aside section#profile img
	width: 100px
	height: 100px
	border: 5px solid #FFF

main aside section#profile h1
	font-size: 12px
	font-weight: normal

main aside section#events-filter ul
	margin: 0
	padding: 0

main aside section#events-filter li
	list-style: none
	margin: 5px 0

main aside section#events-filter li:after
	content: ''
	width: 20px
	height: 20px
	margin-left: 10px
	display: inline-block
	border-radius: 15px
	position: relative
	top: 5px
	border: 3px solid #FFF

main aside section#events-filter li.all:after
	background-color: #FFF

main aside section#events-filter li.con:after
	background-color: #F05

main aside section#events-filter li.par:after
	background-color: #70F

main aside section#events-filter li.cul:after
	background-color: #0A9

main aside section#events-filter li.div:after
	background-color: #F90