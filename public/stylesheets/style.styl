/*
 * Responsive
 */

@media screen and (max-width: 1000px) , screen and (max-height: 700px)
	h3
		font-size: 16px
		transition: font-size 100ms

	.info .action-time
		font-size: 13px

@media screen and (max-width: 480px)
	label#title-label
		bottom: 5px
		left: 5px
		z-index: 2
		font-family: Verdana
		text-align: center
		line-height: 28px
		font-weight: bold
		color: #777
	
	input#title
		position: fixed
		bottom: 0
		font-size: 15px
		z-index: 1
		display: block
		margin: 0
		height: 40px
		background: #FFF
		color: #000
		padding: 0 40px 0 25px
		-webkit-appearance: none
		width: 100vw
		font-family: 'Verdana'
		box-shadow: 0 -4px 0 rgba(0,0,0,0.05)
		text-align: left
	
	section#controls img
		display: none

	h3
		font-size: 5vw
		transition: font-size 100ms

	#box
		display: block /* Mejor control de la barra de scroll */

	#account
		display: none

	main
		overflow-y: auto
		overflow-x: hidden
		-webkit-overflow-scrolling: touch
		height: calc(100vh - 40px)
		display: block
	
	main,
	.action,
	.action .media,
	#start
		width: 100%

	#start #logo
		min-width: 66.608px
		min-height: 90px

	.action
		max-width: inherit

	.action .media,
	#start
		height: 100vw
		max-width: inherit
		max-height: inherit

	.info .author-name
		margin-right: 1px 

	.info h3.action-title .author-name::before
		width: 3.5vw
		height: 3.5vw
		margin: 0 1vw 0 0

	.info .action-time
		font-size: 4vw
	
