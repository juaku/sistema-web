@import 'nib'

/*
 * Variables
 * ---------
 *
 *
 *
 * Colores
 *
 */
whiteColor	= #FFF
lightColor	= #EEE
midColor		= #888
darkColor		= #202020
blackColor	= #000
mainColor		= #F05
fbColor			= #3b5998

/* 
 * Estilos generales
 * ------- ---------
 *
 * 
 *
 *  
 */
html
body
	width: 100%
	height: 100%

body
	// backgroundColor: MAC: #F3F3F5, Plomo: #EAEAEE, Cálido: #EEEEE7, Original: #DDE0EA
	color: midColor
	font-family: Arial, sans-serif
	font-size: 14px
	margin: 0
	padding: 0
	
a
	color: inherit
	text-decoration: none

a:hover
	color: inherit

a
input
div // TODO: Evaluar elementos a los que se aplica
	-webkit-tap-highlight-color: transparent


// TODO: Reformular
.event
	font-size: 24px
	letter-spacing: -0.5px
	color: blackColor

.post .event
	color: whiteColor

.event .at-simbol
	font-family: Verdana, Arial, sans-serif

.event .event-name
	overflow: hidden
	white-space: nowrap
	text-overflow: ellipsis
	
.event .event-people
	letter-spacing: initial

/*
 * Estilos específicos
 * ------- -----------
 *
 *
 *
 * Cabecera
 *
 */
header
	width: 100%
	padding: 10px 0
	position: fixed
	z-index: 10
	top: 0
	display: none

/*
 * Principal
 *
 */
main
	width: 100%
	top: 0
	//bottom: 44px TODO: Evaluar si es necesario
	//bottom: 0px
	overflow: auto
	overflow-x: hidden
	position: absolute
	-webkit-overflow-scrolling: touch // Necesita position absolute
	bottom: 0 // Necesario para scroll asistido

main #wrapper
	width: 100%
	max-width: 1240px
	margin: 0 auto
	display: table

aside
section#view
	display: table-cell
	vertical-align: top

aside#first
	transition: width 500ms
	text-align: right

aside#first #fixed-controls
	width: 280px
	padding: 240px 40px 20px 20px
	position: fixed

/*
 * Controles
 */
section#options-side
	text-align: right
	width: 100%

section#account-controls section#profile
	width: 100%
	display: table
	margin-bottom: 40px

section#account-controls section#profile img
section#account-controls section#profile h2
	display: table-cell
	vertical-align: middle

section#account-controls section#profile img
	width: 80px
	height: 80px
	border-radius: 40px

section#account-controls section#profile h2.profile-name
	width: 100%
	margin: 0
	padding: 5px 10px 0 0
	font-size: 21px
	line-height: 24px
	overflow: hidden
	text-overflow: ellipsis
	font-weight: normal
	letter-spacing: -0.5px

section#account-controls section#profile h2.profile-name .profile-firstname
	font-size: 24px
	color: blackColor

/*
 * Vista
 */

section#view
	//max-width: 640px
	width: 61.8%
	height: 100% // Evaluar
	position: relative // MAC OSX Scroll
	z-index: 1 // MAC OSX Scroll
	// padding-right: 20px

/*
 * Eventos
 */
aside section#events-controls .promoted
aside section#events-controls .events-list
aside section#events-controls .show-more
	margin: 10px

aside section#events-controls .events-list.show-more
	overflow: none
	position: relative
	overflow-y: scroll
	overflow-x: hidden

aside section#events-controls .title
	font-size: 11px
	//margin: 10px 0
		
aside section#events-controls .events-title
	font-size: 14px

aside section#events-controls .event
	padding: 8px 0

aside section#events-controls .event .event-name.small
	font-size: 14px

aside section#events-controls .event .event-people
	font-size: 11px
	margin-left: 15px

aside section#events-controls .show-more
	text-align: center

/*
 * Controles flotantes
 */
nav#view-menu
	transition: background-color 250ms linear
	width: 100%
	display: none
	text-align: center
	position: fixed
	bottom: 0
	z-index: 10

nav#view-menu .view-button
	display: table-cell
	height: 44px

nav#view-menu .view-button.first
nav#view-menu .view-button.middle
nav#view-menu .view-button.last
	width: 44px
	padding: 10px

nav#view-menu .view-button .button
	background-image: url('/images/sprite.svg')
	background-size: auto cover
	width: 44px
	height: 44px
	margin: 0 auto
	cursor: pointer
	border-radius: 100%
	background-color: rgba(255,255,255,0.5)

nav#view-menu #button-options
	background-position: 0px
nav#view-menu #button-posts
	background-position: 176px
nav#view-menu #button-camera
	background-position: 132px
nav#view-menu #button-events
	background-position: 88px
nav#view-menu #button-search
	background-position: 44px

/*
 * Pie
 */
footer
	margin: 10px 5px
	font-size: 12px

footer #brand
	margin: 5px 0
	
/*
 * Vistas de la aplicación
 */
 
// NEW-POST

input#media-loader
	visibility: hidden
	position: absolute

section#new-post
	display: none

section#new-post canvas#new-media-preview
	width: 100%

section#new-post canvas#new-media-preview
	width: 100%
	height: 100vw
	display: block

section#new-post #new-post-controls
	width: 100%
	height: 44px
	display: table
	margin-bottom: 5px

section#new-post #new-post-controls #event-name-input
section#new-post #new-post-controls #share-new-post
section#new-post #new-post-controls #send-post
	display: table-cell
	vertical-align: middle

section#new-post #new-post-controls #event-name-input
	display: table
	width: 100%

section#new-post #new-post-controls #event-name-input *
	font-size: 17px
	letter-spacing: -0.5px

section#new-post #new-post-controls #event-name-input span.at-simbol
section#new-post #new-post-controls #event-name-input input#new-event-name
	display: table-cell
	vertical-align: middle
	height: 24px

section#new-post #new-post-controls #event-name-input span.at-simbol
	// text-align: right
	padding: 10px 0 10px 10px
	width: 1px

section#new-post #new-post-controls #event-name-input input#new-event-name
	width: 95%
	border: none
	padding: 10px 0
	margin: 0
	display: block
	outline: none
	border-radius: 0

placeholder()
	&::-webkit-input-placeholder
		{block}
	&:-moz-placeholder
		{block}
	&::-moz-placeholder
		{block}
	&:-ms-input-placeholder
		{block}

section#new-post #new-post-controls #event-name-input input#new-event-name
	+placeholder()
		color: blackColor
		border-bottom: 1px solid whiteColor

section#new-post #new-post-controls #share-new-post
	width: 44px
	height: 44px

section#new-post #new-post-controls #share-new-post .share
	width: 24px
	height: 24px
	margin: 10px
	display: block

section#new-post #new-post-controls #share-new-post .share #change-color
	fill: midColor

section#new-post #new-post-controls #share-new-post .share.selected #change-color 
	fill: fbColor
	
section#new-post #new-post-controls #send-post
	text-align: center
	text-transform: uppercase
	font-weight: bold
	font-size: 11px
	padding: 2px 15px 0 15px

/*
 * Control de vistas
 */

// .config-view

body.config-view main #new-post
body.config-view main #post-list
	display: none
body.config-view main #first
	display: block

// .posts-view

body.posts-view main #first
body.posts-view main #new-post
	display: none
body.posts-view main #post-list
	display: block

// .new-post-view

body.new-post-view main #first
body.new-post-view main #post-list
	display: none
body.new-post-view main #new-post
	display: block

// .events-view

body.events-view main #first
body.events-view main #new-post
body.events-view main #post-list
	display: none
	
#svg-library
	display: none

/*
 * Responsive
 */ 

@media (max-width: 669px) 
	body
		user-select: none // TODO: Pasar a un detector real de dispositivos
		
	main
		min-width: 290px
		width: 100%
		max-width: inherit
	
	aside
		padding: 0

	aside#first
		display: none
	
	aside#first
		width: 100%
	
	section#options-side
		text-align: left
		
	aside#first section#profile
		display: table
	
	aside#first section#profile img,
	aside#first section#profile h2
		display: table-cell
		vertical-align: top
	
	aside#first section#account-controls section#profile h2.profile-name
		width: 100%
		padding: 10px
		line-height: inherit
	
	aside#first section#account-controls section#profile h2.profile-name .profile-firstname
		font-size: 16px
		color: blackColor
	
	aside#first section#account-controls section#profile h2.profile-name .profile-lastname
		font-size: 14px
	
	section#account-controls .account-control
		margin-bottom: 1px
		text-align: center
		
	section#account-controls .account-control a.button
		height: 15px
		padding: 10px
		display: block
	
	section#account-controls .account-control a.button .bold
		font-weight: bold
	
	aside #options-side,
	aside #events-side
		position: inherit

	section#view
		width: 100%
		display: block
		margin: 0 auto
		padding: 0
		
	section#view section#post-list .post
		width: 100%
		max-width: inherit
		margin-bottom: 5vh

	nav#view-menu
		display: table
		
	body.view-menu-hidden nav#view-menu
		display: none
		
	/* Eventos */

	section#events-controls
		background: initial
	
	section#events-controls .event .event-people
		margin: 0
	
	section#events-controls .promoted
	section#events-controls .events-list
		margin: 5px 0
	
	section#events-controls .promoted .title
		margin: 5px 0
	
	section#events-controls .event
		background: #FFF
		margin-bottom: 1px
		padding: 10px 0