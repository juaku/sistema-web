html
body
	height: 100%

body
	margin: 0
	background-color: #F7F7F7 /* EEE */
	font-family: "Arial"
	color: #111 /* 111 */

label#title-label
	position: fixed
	font-size: 15px
	/*background-color: #DDD*/
	border-radius: 50%
	width: 30px
	height: 30px
	transition: background-color 200ms
	user-select: none

/*label#title-label:hover
	background-color: #EEE*/

input#title
	font-size: 5vw
	font-weight: normal
	margin-top: 32vh
	letter-spacing: -0.05em
	overflow: hidden
	white-space: nowrap
	text-overflow: ellipsis
	position: fixed
	width: 36vw
	padding-right: 0.05em /* Evitar corte letter-spacing negativo */
	outline: 0
	border: 0
	border-radius: 0
	background-color: #F7F7F7
	display: block
	text-align: right

input[type=text]::-ms-clear
	display: none
	width : 0
	height: 0

input[type=text]::-ms-reveal
	display: none
	width : 0
	height: 0

input[type="search"]::-webkit-search-decoration,
input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-results-button,
input[type="search"]::-webkit-search-results-decoration
	display: none

input#title::before
	content: ''

h3
	font-weight: normal
	font-size: 2.5vmin
	letter-spacing: -0.05em
	margin: 0

/* Estilos estructurales */

#box
	display: table
	width: 100%
	height: 100%

#side
	display: table-cell
	vertical-align: top
	text-align: right

main
	display: table-cell
	width: 56vw


/* Estilos modulares */
		
/* Globales */
.at
	font-family: "Verdana"
		
/* Grupales */

#account img
	width: 2em
	height: 2em
	border-radius: 50%
	position: relative
	top: 0.7em
	margin-right: 0.5em

#account
	margin-top: 46vh
	width: 36vw
	position: fixed

#start
	background-color: #FFF /* FFF */
	width: 82vh
	position: relative
	height: 82vh
	max-width: 54vw
	max-height: 54vw
	min-width: 30vw
	min-height: 30vw

#start a#logo-link
	display: block
	position: absolute
	left: 50%
	top: 50%
	transform: translate(-50%, -50%)

#start #logo
	width: calc(66.608vw / 10)
	height: calc(90vw / 10)
	display: block

#start #logo-icon
	cursor: pointer

#start h1
	display: none

/* Action */
.action
	background-color: #F05
	width: 82vh
	max-width: 54vw
	margin-bottom: 3vh
	min-width: 30vw
	position: relative

.action .media
	background-color: #EEE /* CCC */
	width: 100%
	height: 82vh
	max-width: 54vw
	max-height: 54vw
	min-width: 30vw
	min-height: 30vw
	position: relative

.action .media img
	width: 100%
	height: 100%
	display: block
	opacity: 0
	transition: opacity 200ms
	user-select: none
	cursor: pointer

.action.show .media img
	opacity: 1

.action .media .preloader
	width: 10%
	height: 10%
	border-radius: 50%
	position: absolute
	left: 50%
	top: 50%
	transform: translate(-50%, -50%)
	animation: preloader 750ms linear infinite // Infinite Genera parpadeo en chrome debug cambiar por otra cosa

@keyframes preloader
	0%
		box-shadow: 0 0 0 0 rgba(0,0,0,0)
	50%
		box-shadow: 0 0 0 1vw rgba(0,0,0,0.1)
	100%
		box-shadow: 0 0 0 1vw rgba(0,0,0,0.05)

/* Action -> Info */

.info
	background-color: #FFF /* FFF */
	width: 100%
	height: 15vmin
	min-height: 72px
	display: table
	table-layout: fixed

.info .author-picture,
.info .action-info,
.info .save-button
	display: table-cell
	vertical-align: middle

.info .author-picture
	width: 19%
	padding: 2.5%

.info a.save-link 
	display: block
	border-radius: 50%

.info .author-picture img
	display: block
	border-radius: 50%
	margin: 0 auto
	width: 100%

.info .action-info
	padding-left: 0.5em

.info h3.action-title
	overflow: hidden
	white-space: nowrap
	text-overflow: ellipsis
	text-align: left

.info h3.action-title .author-name
	font-weight: bold

.info h3.action-title .author-hex-code
	content: ''
	display: inline-block
	background-color: #888
	border-radius: 50%
	width: 0.7em
	height: 0.7em
	margin: 0 0.2em 0 0

.info .action-time
	font-size: 1.75vmin
	color: #888

.info .save-button
	width: 18%
	padding: 4%

.info a.save-link .save
	display: block
	background-color: #CCC
	border-radius: 50%
	width: 100%

svg#svg-library
	display: none



