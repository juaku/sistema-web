/* 
 * Estilos generales
 */
body
  background-color: #EEE
  font-family: Helvetica, Arial, sans-serif
  font-size: 14px
  margin: 0
  min-width: 995px

a
  color: #00B7FF

 /*
  * Estilos espec√≠ficos
  */

// Cabecera
header
	background-color: #FFF
	height: 50px
	margin: 0 auto
	display: flex
	justify-content: space-between
	padding: 5px 20px
	align-items: center;

header #main-area
	display: flex
	align-items: center;
	justify-content: center;

header #main-area #title a
	background-image: url('../images/sprite.png?v=sdfbh')
	background-repeat: no-repeat
	width: 105px
	height: 45px
	display: block

header #main-area #title a h1
	display: none

header #main-area #search-box input
	color: #777
	width: 370px
	height: 20px
	margin-left: 20px
	padding: 0 3px
	border: 1px solid #CCC

header navigation ul
	padding: 0
	display: flex
	margin: 0

header navigation ul li
	list-style: none
	margin: 0 20px;
	

