		width: 52px
		height: 52px
		right: 0
		top: 0
		cursor: pointer
		position: absolute
	
	i.more-back
		width: 32px
		height: 32px
		border-radius: 50%
		display: block
		margin: 10px
		background-color: backColor
		transition: background-color 100ms

