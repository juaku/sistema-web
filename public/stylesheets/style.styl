body
	margin: 0
	background-color: #000//EEE /*#F7F7F7*/ /* EEE */
	font-family: "Arial"
	color: #FFF//000

section#view-controls
	margin-top: 32vh
	position: fixed

input#title
	font-size: 5vw
	font-weight: normal
	letter-spacing: -0.03em
	overflow: hidden
	white-space: nowrap
	text-overflow: ellipsis
	width: 36vw
	padding-right: 0.03em /* Evitar corte letter-spacing negativo */
	outline: 0
	border: 0
	border-radius: 0
	background-color: inherit
	color: #FFF//000
	display: block
	text-align: right
	transition: color 200ms

input[type=text]::-ms-clear
	display: none
	width : 0
	height: 0

input[type=text]::-ms-reveal
	display: none
	width : 0
	height: 0

input[type="search"]::-webkit-search-decoration,
input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-results-button,
input[type="search"]::-webkit-search-results-decoration
	display: none

input#title::before
	content: ''

input#title:focus
	color: #CCC//555

