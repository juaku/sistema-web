aux1color	= #181818
auxFbColor	= #3b5998

/* 
	Estilos generales

*/

placeholder()
	&::-webkit-input-placeholder
		{block}
	&:-moz-placeholder
		{block}
	&::-moz-placeholder
		{block}
	&:-ms-input-placeholder
		{block}

html
body
	height: 100%

body
	margin: 0
	background-color: backColor /*#EEE*/ /*#F7F7F7*/
	font-family: "Arial"
	color: frontColor

