@import 'nib'

/* 
 * Estilos generales
 * ------- ---------
 */
body
	background-color: #EEE
	font-family: Helvetica, Arial, sans-serif
	font-size: 14px
	margin: 0
	padding: 0
	min-width: 995px

html
body
	width: 100%
	height: 100%

a
  color: #00B7FF

input
		border: 1px solid #CCC

/*
 * Estilos específicos: /login
 * ------- -----------
 */
main#start
	background-color: #333
	margin: 0px
	width: 100%
	height: 100%

main#start section#access
	background-color: #FFF
	width: 300px
	height: 500px
	text-align: center
	position: relative
	top: 50%
	left: 50%
	transform: translate(-50%, -50%)
	display: flex
	flex-direction: column
	align-items: center
	justify-content: space-between

main#start section#access #logo
	background-image: url('/images/sprite.png?v=1005')
	width: 210px
	height: 90px
	background-size: 210px
	background-repeat: no-repeat
	margin: 20px

main#start section#access #logo h1
	display: none

main#start section#access #methods #FB
	background-color: #3B5998
	color: #FFF
	font-weight: bold
	width: 230px
	margin: 20px
	padding: 10px 0
	text-decoration: none
	display: block
	
/*
 * Estilos específicos: /index
 * ------- -----------
 */

/*
 * Cabecera
 */
header
	background-color: #FFF
	width: 100%
	min-width: 995px
	position: fixed
	top: 0
	left: 0
	z-index: 1

header #header
	display: flex
	align-items: center
	margin: 0 20px
	height: 60px

header #header #title
	margin-left: 5px

header #header #title a
	background-image: url('/images/sprite.png?v=1005')
	background-repeat: no-repeat
	background-size: 105px
	width: 105px
	height: 45px
	display: block

header #header #title a h1
	display: none

header #header #search-box
	margin-left: 31px

header #header #search-box input
	color: #555
	width: 358px
	font-size: 14px
	padding: 5px
	border: 1px solid #EEE
	font-weight: normal	// IE
	-webkit-appearance: none	// Safari
	border-radius: 0px	// Safari

header #header nav
	align-self: flex-end

header #header nav:before
	content: ''
	border: 1px solid #AAA
	width: 20px
	height: 31px
	display: inline-block
	margin-left: 10px
	border-bottom: none
	border-right: none
	vertical-align: bottom
	margin-top: 12px

header #header nav #select
	background-color: #FFF
	font-size: 14px
	width: 165px;
	color: #333
	margin: 0px
	border: 1px solid #EEE
	vertical-align: top
	display: inline-block
	position: absolute

header #header nav #select:after
	content: ''
	display: inline-block
	width: 0
	height: 0
	position: absolute
	left: 145px
	top: 10px
	border-top: 7px solid #333
	border-bottom: 7px solid transparent
	border-left: 5px solid transparent
	border-right: 5px solid transparent

header #header nav #select #current
header #header nav #select #options
	padding: 5px 25px 5px 10px

header #header nav #select #options ul
	margin: 0
	padding: 0

header #header nav #select #options li
	list-style: none
	padding: 5px 0

/*
 * Cuerpo
 */
main
	display: flex
	margin: 60px 0 0 0

/*
 * Cuerpo / Lado
 */
main aside#controls
	background-color: #EEE
	text-align: right
	position: fixed
	left: 0
	width: 150px
	overflow-y: auto
	overflow-x: hidden
	text-align: left

main aside#controls .content
	width: 110px
	margin: 0 0 0 20px
	display: inline-block
	text-align: right

/*
 * Cuerpo / Lado / Perfil
 */
main aside#controls section#profile
	margin-top: 15px

main aside#controls section#profile img
	width: 100px
	height: 100px
	border: 5px solid #FFF

main aside#controls section#profile h1
	font-size: 12px
	font-weight: normal
	margin: 5px

/*
 * Cuerpo / Lado / Filtro de tipo
 */
main aside#controls section#type-filter
	margin: 50px 5px
	
main aside#controls section#type-filter ul
	margin: 0
	padding: 0

main aside#controls section#type-filter li
	color: #555
	list-style: none
	margin: 10px 0
	border-radius: 20px

main aside#controls section#type-filter li:hover
	color: #000

main aside#controls section#type-filter li:after
	content: ''
	width: 20px
	height: 20px
	margin-left: 10px
	display: inline-block
	border-radius: 20px
	box-shadow: 0 0 0 2px #FFF
	vertical-align: middle

main aside#controls section#type-filter li.all:after
	background-color: #DDD

main aside#controls section#type-filter li.con:after
	background-color: #F05

main aside#controls section#type-filter li.par:after
	background-color: #70F

main aside#controls section#type-filter li.cul:after
	background-color: #0A9

main aside#controls section#type-filter li.div:after
	background-color: #F90

main aside#controls section#type-filter li:hover:after
	background-image: radial-gradient(rgba(255, 255, 255, 0.9) 35%, rgba(255, 255, 255, 0) 40%)

/*
 * Cuerpo / Lado / Buscador por tiempo
 */
main aside#controls section#time-finder
	margin: 60px 5px 10px

main aside#controls section#time-finder ul
	margin: 0
	padding: 0

main aside#controls section#time-finder li
	list-style: none
	height: 20px
	color: #999

main aside#controls section#time-finder li:hover
	color: #000

/*
 * Cuerpo / Lista
 */
main section#view
	margin-left: 150px
	display: flex
	flex: 1

main section#view section#list
	width: 370px
	min-width: 370px
	padding: 15px 10px
	border-left: 1px solid #FFF
	border-right: 1px solid #AAA

main section#view section#list .event
	background-color: #FFF
	width: 370px
	height: 215px
	margin-bottom: 10px
	padding: 10px 0

main section#view section#list .event:after
	content: ''
	position: relative
	bottom: 215px
	left: 370px
	border: none
	border-top: 1px solid #AAA
	display: inline-block
	width: 10px
	vertical-align: top

main section#view section#list .event .event-image
	background-color: #EEE
	width: 350px
	height: 130px
	margin: 0 10px 10px

main section#view section#list .event .event-data
	width: 350px
	height: 45px
	margin: 10px

main section#view section#list .event .event-controls
	border-top: 1px solid #EEE
	height: 29px

/*
 * Cuerpo / Detalle
 */
main section#view section#media
	background-color: #333
	margin: 0 20px
	flex: 1

// TODO: Ver si es necesario con Angular.js
#type-filter,
#profile,
#time-finder,
header nav #select {
	cursor: pointer
}
