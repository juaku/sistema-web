/* Grupales */

#account
	width: 36vw
	position: fixed	
	bottom: 20vh
	
#account a.user-link
	float: right

#account img.user-picture
	width: 3em
	height: 3em
	border-radius: 50%
	position: relative
	//top: 0.7em
	margin-left: 0.5em

#account .user-userName
	font-size: 1.5em

